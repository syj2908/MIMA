<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_login"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <CircleImageView.CircleImageView
            android:id="@+id/login_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic1"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/login_pic"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="100sp"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入登录密码:"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp" />
    <EditText
        android:id="@+id/login_psd"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入不正确，请确认无误后再次输入"
            android:textSize="18dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="55dp"
            android:textColor="@color/colorLightCoral"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/login_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码不能为空！"
            android:textSize="18dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="55dp"
            android:textColor="@color/colorLightCoral"
            android:visibility="invisible"/>
    </RelativeLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btn_login"
        android:text="登录"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"/>

</LinearLayout>